generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  path      String
  artworks  Artwork[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Artwork {
  id          Int      @id @default(autoincrement())
  title       String
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  subcategory String
  folderPath  String
  imageUrls   String   @db.Text // Stockage JSON des URLs d'images
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([title, categoryId])
  @@index([categoryId])
  @@index([title])
}
